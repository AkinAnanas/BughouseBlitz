
<FloatLayout>:
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: app.theme.accent
    AnchorLayout:
        id: container
        anchor_x: 'center'
        anchor_y: 'center'
        size_hint: None, None
        size: 400, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        BoardWidget:
            id: boardWidget
            size_hint: 1, 1
            Label:
                text: ' a b c d e f g h '
                size_hint: .9, .05
                pos_hint: {'x':.05,'y':.05}
                color: 1, 1, 1, 1
    BoxLayout:
        id: controls
        text: 'Controls'
        size_hint: 1, .1
        Button:
            text: 'Flip'
            size: 50, 30
            on_press: boardWidget.flip()
        Button:
            text: '<'
            size: 50, 30
            on_press: boardWidget.back()
        Button:
            text: '>'
            size: 50, 30
            on_press: boardWidget.next()
        Button:
            text: 'New Game'
            size: 50, 30
            on_press: boardWidget.new_game()
